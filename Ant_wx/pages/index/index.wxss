/* pages/index/index.wxss */
.manu{
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}
/*分类*/
.item-classify{
    width: 100%;
    height: 80rpx;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    font-size:35rpx;
    background-color: white;
}

.item-classify-1{
    padding-left: 5px;
    padding-right: 5px;
    opacity: 0.2;
}
.item-classify-2{
    padding-left: 5px;
    padding-right: 5px;
}
.manu-down{
    padding-top: 0rpx;
}
.manu-down-class{
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.container{
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 30rpx;
}
.container-bottom{
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 30rpx;
    color: #60d1cf;
    opacity: 0.5;
    border-bottom: solid 1rpx #dddddd;
}
.item-1{
    color: #60d1cf;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.item-1-status{
    color:black;
    border: 1rpx solid #60d1cf;
    border-radius: 30%;
}
/*首页头像*/
.item-1 image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.item-1-1{
    display: flex;
    flex-direction: column;
}
.item-1-1-1{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.item-1-1-2{
    font-size: 22rpx;
}
.item-2{
    height: 250rpx;
}
/*首页图片*/
.item-2 .item-2-im2 .item-2-im2-nav{
    height: 250rpx;
    width: 500rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 10rpx;
    padding-left: 60rpx;
    padding-right: 60rpx;
}
.item-2 .item-2-im2 image{
    height: 250rpx;
    border-radius: 5%;
}
.item-2 .item-2-im2 .item-2-im2-nav image{
    height: 250rpx;
    border-radius: 5%;
}
/*首页内容*/
.item-3{
    padding: 10rpx;
    padding-left: 60rpx;
    padding-right: 60rpx;
}
/*话题*/
.item-4{
    color: #60d1cf;
    font-size:x-small;
    padding-left: 60rpx;
    padding-right: 60rpx;
}
/*地址*/
.item-5{
    color: #60d1cf;
    padding-left: 60rpx;
    padding-right: 60rpx;
}
.item-6{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /*border-bottom: 1rpx solid #dddddd;*/
    padding-left: 60rpx;
    padding-right: 60rpx;
}
/*底部*/
.bottom-window{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 300rpx;
    right: 50rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center;
    background-color: white;
    overflow-y: scroll;
    
    border: 1rpx solid #60d1cf;
    border-radius: 50%;
}
.bottom-window-notification{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 180rpx;
    right: 50rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center;
    background-color: white;
    overflow-y: scroll;
    border-radius: 50%;
}
.notification-active{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.notification-active image{
    height: 80rpx;
    width: 80rpx;
}
/*评论栏*/
.item-6-left{
    opacity: 0.2;
    background-color: none;
    color: white;
    height: 50rpx;
    width: auto;
}
.item-6-left::after{
    opacity: 0.2;
    border: none;
}
.item-6-right{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    opacity: 0.2;
}
.setting-img-content{
    width: 30rpx;
    height: 30rpx;
    opacity: 0.5;
}
.setting-img{
    width: 45rpx;
    height: 45rpx;
    padding-left: 10rpx;
    opacity: 0.5;
}
.setting-img-pressed{
    width: 45rpx;
    height: 45rpx;
    padding-left: 10rpx;
    opacity: 1.0;
}
.manu-topic{
    display: flex;
    flex-direction:row;
    flex-flow: row wrap;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 10rpx;
}
.manu-topic-1{
    padding: 5rpx;
}
.manu-topic-1-1{
    color: #60d1cf;
    border: solid 1rpx #60d1cf;
    width: fit-content;
    height: fit-content;
    border-radius: 10%;
}
.reminder{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding-top: 450rpx;
    color: #60d1cf;
}
.reminder-bt{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #60d1cf;
}
.reminder-bt text{
    border-bottom: 1rpx solid #60d1cf;
    width: fit-content;
}
.navbar-left{
    color: black;
}
.navbar-center{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.data-loading{
    color: #60d1cf;
    height: 80rpx;
    line-height: 80rpx;
    background-color: white;
    text-align: center;
    font-size: 32rpx;
  }
.scrollview{
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}