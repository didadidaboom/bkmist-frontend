/* pages/topicList/topicList.wxss */

.manu{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 80rpx;
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.item-1{
    width: 100%;
    height: 100rpx;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: center;
    background-color: #ffffff;
    overflow-y: scroll;
}
.topicInput{
    width: auto;
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    flex: 1;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    color: #333333;
    border-bottom: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
    z-index: 21;
}
.item-1-right-1{
    padding-right: 10rpx;
    position: relative;
    font-size: 32rpx;
    line-height: 100rpx;
    border-bottom: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
}
.item-1-2{
    padding-top: 50rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    width: 750rpx;
    opacity: 0.5;
}
.item-2{
    padding-left: 20rpx;
    padding-right: 20rpx;
    width: 750rpx;
}
.item-2-topic{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 10rpx;
}
.item-2-topic-loading{
    color: #60d1cf;
    padding-top: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
/*底部*/
.bottom-window{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 100rpx;
    right: 100rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center;
    background-color: white;
    overflow-y: scroll;
    
    border: 1rpx solid #60d1cf;
    border-radius: 50%;
}
.placeholder{
    width: 100%;
    height: 100rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: center;
    background-color: #ffffff;
    overflow-y: scroll;

    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.place-name{
    width: 500rpx;
    display: flex;
    flex-direction: row;
    flex-flow: row wrap;
}
.place-name-1{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.place-between{
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.place-separate{
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
}
.place-center{
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.place-left{
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}