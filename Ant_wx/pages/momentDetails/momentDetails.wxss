/*输入评论*/
.bottomView{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 20;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: center;
    background-color: #ffffff;
    overflow-y: scroll;
}
.commentsInput{
    width: auto;
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    flex: 1;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    color: #333333;
    border-top: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
    z-index: 21;
}
.commentAt{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    border-top: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
}
/*条件匿名选择  评论*/
.commentAnonymous{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    border-top: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
}
.commentImage{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    border-top: solid #f4f4f4 0.01rpx;
    background-color: #f4f4f4;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.bottomView .commentImage image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    
}
.commentsBtn{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    font-size: 32rpx;
    /*color: #ffffff; */
    border-top: solid #f4f4f4 0.01rpx; /*#2b3e61*/
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #f4f4f4; /*#2b3e61*/
    z-index: 21;
}
.item-7{
    opacity: 0.5;
}
