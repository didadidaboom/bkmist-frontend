/* pages/publish/publish.wxss */
.manu{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.item-1{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
textarea{
    width: 700rpx;
    border: 1px solid #dddddd;
    border-top-style:none;
    border-left: none;
    border-right: none;
    padding-bottom: 5rpx;
}
.item-2{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.item-2 .item-2-left{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.item-2-left-2{
    padding-left: 20rpx;
}
.item-3{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.item-3 .item-3-left{
    display: flex;
    flex-direction: row;
}
.item-4{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
}
.item-4-right{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

/*show*/
.item-show{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-bottom: 1px solid #dddddd;
}
.item-show-topic{
    display: flex;
    flex-direction: row;
    flex-flow: row wrap;
    justify-content: flex-start;
    padding-right: 20rpx;
}
.item-topic-add{
    padding-left: 20rpx;
    color: red;
}
image{
    width: 80rpx;
    height: 120rpx;
}
