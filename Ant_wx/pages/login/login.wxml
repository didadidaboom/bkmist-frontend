<!--pages/login/login.wxml-->
<navBar title="登陆" background='#60d1cf' back="{{true}}" home="{{true}}" bindback="handlerGobackClick" bindhome="handlerGohomeClick"></navBar>
<view class="manu">
    <view class="item-1">
        <text>手机号:<text class="item-1-1">(选填)</text></text>
        <input value="{{phone}}" bindinput="fetchPhone" placeholder="请输入手机号（选填）"></input>
    </view>
    <view class="item-2">
        <button class="item-2-1" bindtap="onClickLogin">微信一键登陆(有手机号)</button>
    </view>
    <view class="item-2">
        <button class="item-2-1" bindtap="onClickLogin">微信一键登陆(无手机号)</button>
    </view>
</view>