/* pages/message/message.wxss */
.c3-manu .c3-item-1{
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.c3-manu .c3-item-1 .item-1{
    display: flex;
    flex-direction: column;
}
.c3-manu .c3-item-1 .item-1 text{
    font-size: xx-small;
}
.c3-manu .c3-item-1 .item-1 image{
    height: 100rpx;
    width: 100rpx;
}
.c3-manu .c3-item-2{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.c3-manu .c3-item-2 .msg{
    width: 700rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.c3-manu .c3-item-2 .msg .msg-png{
    width: 120rpx;
    height: 300rpx;
}
.c3-manu .c3-item-2 .msg .msg-png image{
    height: 100rpx;
    width: 100rpx;
}
.c3-manu .c3-item-2 .msg .msg-txt{
    width: 580rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
}
.c3-manu .c3-item-2 .msg .msg-txt .txt-1{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.c3-manu .c3-item-2 .msg .msg-txt .txt-1 .txt-1-left{
    font-weight: bold;
    font-size: small;
}
.c3-manu .c3-item-2 .msg .msg-txt .txt-1 .txt-1-right{
    font-weight:lighter;
    font-size: small;
}
.c3-manu .c3-item-2 .msg .msg-txt .txt-2{
    height: 40rpx;
    font-size: small;
    font-weight: lighter;
    overflow: hidden;
}
