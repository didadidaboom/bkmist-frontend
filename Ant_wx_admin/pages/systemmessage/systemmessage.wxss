/* pages/systemmessage/systemmessage.wxss */
.manu{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
    word-break: break-all;
    word-wrap: break-word;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.item-1{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
textarea{
    width: 700rpx;
    border: 1px solid #dddddd;
    border-top-style:none;
    border-left: none;
    border-right: none;
    padding-bottom: 5rpx;
}
.item-2{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: 700rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.item-2-type{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    width: auto;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    border: 1rpx solid #dddddd;
}

.item-2 .item-2-left{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.item-2-left-2{
    padding-left: 20rpx;
}
.item-3-system{
    padding-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 700rpx;
}
.item-3-system-up{
    display: flex;
    flex-direction: row;
}
.item-3-system-del{
    color: #60d1cf;
    padding-left: 5rpx;
    padding-right: 5rpx;
}
.item-3-system-text{
    width: 100rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}